<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<!--
    HBox
    spacing: gutter between the columns
    alignment="xxx": bottom_left, bottom_right, top_left, top_right, center, center_right, center_left
-->
<HBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="bottom_right" style="-fx-border-color: red; -fx-border-width: 3; -fx-border-style: dashed"
        spacing="10">
    <padding>
        <Insets bottom="10" right="10"/>
    </padding>
    <Button text="Ok" prefWidth="90"/>
    <Button text="Cancel" prefWidth="90"/>
    <Button text="Help" prefWidth="90"/>
</HBox>